<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.start.StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_explicit_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无参数显式启动" />

        <Button
            android:id="@+id/btn_arguments_explicit_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="有参数显式启动" />

        <Button
            android:id="@+id/btn_explicit_start_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无参数显式启动有返回结果" />

        <Button
            android:id="@+id/btn_arguments_explicit_start_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="有参数显式启动有返回结果" />

        <Button
            android:id="@+id/btn_implicit_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无参数隐式启动" />

        <Button
            android:id="@+id/btn_arguments_implicit_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="有参数隐式启动" />

        <Button
            android:id="@+id/btn_implicit_start_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无参数隐式启动有返回结果" />

        <Button
            android:id="@+id/btn_arguments_implicit_start_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="有参数隐式启动有返回结果" />

        <Button
            android:id="@+id/btn_implicit_start_dial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐式启动之拨号" />

        <Button
            android:id="@+id/btn_implicit_start_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐式启动之网页" />

        <TextView
            android:id="@+id/text_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>