<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".broadcast.BroadcastIndexActivity">


    <Button
        android:id="@+id/btn_dynamic_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动态注册标准广播"/>

    <Button
        android:id="@+id/btn_standard_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送标准广播"/>

    <Button
        android:id="@+id/btn_ordered_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送有序广播"/>

    <Button
        android:id="@+id/btn_local_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送本地广播"/>

</LinearLayout>